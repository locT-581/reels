{
  "name": "@xhub-reel/player",
  "version": "0.2.3",
  "description": "HLS video player for XHubReel",
  "license": "MIT",
  "author": "XHubReel Team",
  "homepage": "https://github.com/xhub-reel/xhub-reel#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/xhub-reel/xhub-reel.git",
    "directory": "packages/player"
  },
  "bugs": {
    "url": "https://github.com/xhub-reel/xhub-reel/issues"
  },
  "keywords": [
    "xhub-reel",
    "video",
    "player",
    "hls",
    "react",
    "streaming"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "@xhub-reel/core": "workspace:*",
    "@xhub-reel/player-core": "workspace:*",
    "@xhub-reel/ui": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "motion": ">=11.0.0",
    "lucide-react": ">=0.460.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "lucide-react": "^0.469.0",
    "motion": "^12.11.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ]
}
