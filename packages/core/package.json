{
  "name": "@xhub-reel/core",
  "version": "0.2.3",
  "description": "Core logic, types, stores, and utilities for XHubReel",
  "license": "MIT",
  "author": "XHubReel Team",
  "homepage": "https://github.com/xhub-reel/xhub-reel#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/xhub-reel/xhub-reel.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/xhub-reel/xhub-reel/issues"
  },
  "keywords": [
    "xhub-reel",
    "video",
    "player",
    "react",
    "tiktok",
    "short-form"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./stores": {
      "import": "./dist/stores/index.mjs",
      "require": "./dist/stores/index.js",
      "types": "./dist/stores/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.mjs",
      "require": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants/index.mjs",
      "require": "./dist/constants/index.js",
      "types": "./dist/constants/index.d.ts"
    },
    "./api": {
      "import": "./dist/api/index.mjs",
      "require": "./dist/api/index.js",
      "types": "./dist/api/index.d.ts"
    },
    "./storage": {
      "import": "./dist/storage/index.mjs",
      "require": "./dist/storage/index.js",
      "types": "./dist/storage/index.d.ts"
    },
    "./offline": {
      "import": "./dist/offline/index.mjs",
      "require": "./dist/offline/index.js",
      "types": "./dist/offline/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.mjs",
      "require": "./dist/styles/index.js",
      "types": "./dist/styles/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.0",
    "@xhub-reel/design-tokens": "workspace:*",
    "@xhub-reel/types": "workspace:*",
    "idb": "^8.0.0",
    "zustand": "^5.0.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.2",
    "react": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ]
}
