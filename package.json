{
  "name": "xhub-reel-stream",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev --filter=!@xhub-reel/docs --concurrency=15",
    "build": "turbo run build",
    "build:pkg": "turbo run build --filter=!@xhub-reel/docs",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "build:analyze": "turbo run build:analyze",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "version": "changeset version",
    "release": "pnpm build:pkg && pnpm changeset publish",
    "release:dry": "pnpm build:pkg && pnpm changeset publish --dry-run",
    "publish:manual": "pnpm publish:types && pnpm publish:tokens && pnpm publish:core && pnpm publish:engines && pnpm publish:ui && pnpm publish:gestures && pnpm publish:player && pnpm publish:feed && pnpm publish:embed",
    "publish:types": "pnpm --filter @xhub-reel/types publish --access public --no-git-checks",
    "publish:tokens": "pnpm --filter @xhub-reel/design-tokens publish --access public --no-git-checks",
    "publish:core": "pnpm --filter @xhub-reel/core publish --access public --no-git-checks",
    "publish:engines": "pnpm --filter @xhub-reel/player-core publish --access public --no-git-checks && pnpm --filter @xhub-reel/player-engine publish --access public --no-git-checks",
    "publish:ui": "pnpm --filter @xhub-reel/ui publish --access public --no-git-checks",
    "publish:gestures": "pnpm --filter @xhub-reel/gestures publish --access public --no-git-checks",
    "publish:player": "pnpm --filter @xhub-reel/player publish --access public --no-git-checks",
    "publish:feed": "pnpm --filter @xhub-reel/feed publish --access public --no-git-checks",
    "publish:embed": "pnpm --filter @xhub-reel/embed publish --access public --no-git-checks",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react-vite": "^10.1.10",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.10.2",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "storybook": "^10.1.10",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16",
    "web-vitals": "^5.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
